@model UserCreateModel
 
@{ 
    Layout = "_Layout";
}


<div class="mt-4">
    <form asp-action="SignUp" asp-controller="Account" method="post" class="p-4 w-50 mx-auto">

        <div class="mb-3">
            <label>Adınız :</label>
            <input class="form-control" asp-for="@Model.Firstname" />
        </div>
        <div class="mb-3">
            <label>Soyadınız :</label>
            <input class="form-control" asp-for="@Model.Surname" />
        </div>
        <div class="mb-3">
            <label>Kullanıcı Adınız :</label>
            <input class="form-control" asp-for="@Model.Username" />
        </div>
        <div class="mb-3">
            <label>Telefon Numaranız :</label>
            <input class="form-control" asp-for="@Model.PhoneNumber" />
        </div>
        <div class="mb-3">
            <select class="form-select" asp-items="@Model.Genders" asp-for="@Model.GenderId">
                <option value="0">Bir cinsiyet seçiniz.</option>
            </select>
        </div>
        <div class="mb-3">
            <label>Şifreniz :</label>
            <input class="form-control" type="password" asp-for="@Model.Password" />
        </div>
        <div class="mb-3">
            <label>Şifre Tekrar</label>
            <input class="form-control" type="password" asp-for="@Model.ConfirmPassword" />
        </div>
        <div class="mb-3 text-end">
            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </div>

        <div class="text-danger" asp-validation-summary="All"></div>
    </form>
</div>